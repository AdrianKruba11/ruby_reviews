<h1>All Movies</h1>
<%= link_to "Add New Movie", new_movie_path, class: "btn btn-success mb-3" %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Year</th>
    <th>Category</th>
    <th>Rating</th>
    <th>Watched</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.author %></td>
      <td><%= movie.release_year %></td>
      <td><%= movie.category %></td>
      <td><%= movie.rating %></td>
      <td><%= movie.watched ? 'Yes' : 'No' %></td>
      <td>
        <%= link_to "Show", movie_path(movie), class: "btn btn-info btn-sm" %>
        <%= link_to "Edit", edit_movie_path(movie), class: "btn btn-warning btn-sm" %>
        <%= link_to 'Delete', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
